<%- include("partials/header"); -%>

<h1>Compose</h1>

<form action="/compose" method="post">
    <div class="form-group">
        <label>Title</label>
        <input type="text" class="form-control" name="postTitle" autocomplete="off">
        <label for="newPost">Post</label>
        <textarea class="form-control" name="postBody" cols="150" rows="5"></textarea>
        <button style="margin-top: 10px;" type="submit" class="btn btn-primary" name="button">Publish</button>
    </div>
</form>

<%- include("partials/footer"); -%>